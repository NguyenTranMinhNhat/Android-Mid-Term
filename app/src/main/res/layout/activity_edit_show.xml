<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_show">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_back_es"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/back"
            android:textSize="30dp" />

        <ImageView

            android:id="@+id/imv_save_icon_es"
            android:layout_width="48dp"
            android:layout_height="45dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/save_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_tacGia_es"
            android:layout_width="170dp"
            android:layout_height="176dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/binh" />

        <TextView
            android:id="@+id/tv_tenTacGia_es"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="32dp"
            android:gravity="center"
            android:text="Trịnh Thăng Bình"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="Performance schedule"
        android:textSize="32dp" />

    <EditText
        android:id="@+id/et_danhmuc_es"
        android:layout_width="match_parent"
        android:layout_height="393dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/border_editext"
        android:gravity="top"
        android:text="song"
        android:layout_marginTop="16dp"/>

</LinearLayout>